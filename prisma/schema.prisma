generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Todo {
  id        String  @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String @db.String
  completed      Boolean @default(false)
  startAt   DateTime
  endAt     DateTime
  type      Int
  muscle    Int
}

model Worker {
  id        String  @id @default(cuid()) @map("_id")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  name      String
  gender    Boolean
  age       Int
  code      String
}

